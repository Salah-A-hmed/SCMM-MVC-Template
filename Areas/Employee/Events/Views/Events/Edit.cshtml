<!-- Views/Events/Create.cshtml and Edit.cshtml -->
@model SCMS.DTOs.EventDTO

@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"].ToString() + " Event";
}

<div class="container mx-auto p-6 bg-white mt-10">
    <h1 class="text-4xl font-semibold text-primary">Edit Events</h1>
    <form asp-action="Edit" method="post">
		<div class="mt-5 form-group">
			<label asp-for="Title" class="control-label font-bold text-xl text-gray-700"></label>
			<input asp-for="Title" placeholder=" Enter Name"
				   class="input input-bordered border-1 rounded-3xl w-full mt-4 px-5 form-control" />
			<span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="grid grid-cols-2 gap-4 mt-4 form-group">
            <div>
				<label asp-for="Location" class="control-label block text-gray-700">Location</label>
                <input placeholder="Enter Location"
					   asp-for="Location" class="form-control input input-bordered border-1 rounded-3xl w-full mt-4 px-5" />
				<span asp-validation-for="Location" class="text-danger"></span>
            </div>
			<div>
				<label asp-for="StartDate" class="control-label block text-gray-700">Date</label>
				<input asp-for="StartDate" class="form-control input input-bordered border-1 rounded-3xl w-full mt-4 px-5" />
				<span asp-validation-for="StartDate" class="text-danger"></span>
                
            </div>
        </div>

        <div class="mt-4 grid grid-cols-2 gap-4 form-group">
            <div>
                <label asp-for="Capacity" class="control-label block text-gray-700">Capacity</label>
                <input asp-for="Capacity"
                       class="form-control input input-bordered border-1 rounded-3xl w-full mt-4 px-5" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="mt-6 flex justify-end space-x-4">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-red-700">Cancel</a>
            </div>
        </div>

    </form>
</div
      