@model List<string> 
@{
    ViewData["Title"] = "Frequent Questions";
}

<div class="p-8 max-w-5xl mx-auto">
    <h1 class="text-2xl font-bold mb-6">Frequent Questions</h1>

    <div class="max-w-4xl mx-auto p-8 space-y-6">
        @if (Model.Any())
        {
            @foreach (var question in Model)
            {
                <div class="bg-gray-100 border border-gray-300 rounded-xl p-4">
                    <div class="flex items-center gap-4">
                        <div class="bg-purple-100 text-purple-600 w-10 h-10 rounded-full flex items-center justify-center font-bold">
                            Q
                        </div>
                        <span class="text-base font-medium">@question</span>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-gray-500">No frequent questions found.</p>
        }
    </div>
</div>