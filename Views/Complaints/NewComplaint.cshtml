@model SCMM.Models.SupportTicket
@{
    ViewData["Title"] = "New Complaint";
}
<h2>New Complaint</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}



<div class="p-8 max-w-3xl mx-auto">
    <div class="card bg-base-100 border border-base-200 shadow-sm">
        <div class="card-body">
            <h2 class="text-xl font-semibold mb-4">Tell us how we can help you</h2>

            <form asp-action="NewComplaint" method="post">
                <div class="form-control mb-4">
                    <label class="label" asp-for="Title">
                        <span class="label-text">Title of complaint</span>
                    </label>
                    <input asp-for="Title" type="text" class="input input-bordered" required />
                </div>

                <div class="form-control mb-4">
                    <label class="label" asp-for="Category">
                        <span class="label-text">Category</span>
                    </label>
                    <select asp-for="Category" class="select select-bordered" required>
                        <option value="">Select a category</option>
                        <option value="Technical">Technical</option>
                        <option value="Academic">Academic</option>
                        <option value="Administrative">Administrative</option>
                        <option value="Financial">Financial</option>
                        <option value="Financial">Facilities</option>
                        <option value="Financial">CourseRegistration</option>
                    </select>
                </div>


                <div class="form-control mb-4">
                    <label class="label" asp-for="Content">
                        <span class="label-text">Description</span>
                    </label>
                    <textarea asp-for="Content" class="textarea textarea-bordered" required></textarea>
                </div>

                <button type="submit" class="btn btn-success w-fit">Submit</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}